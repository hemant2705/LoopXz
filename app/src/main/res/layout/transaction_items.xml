<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:ignore="MissingConstraints">


    <TextView
        android:id="@+id/transactionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234565878782"
        android:textColor="@color/black"
        android:textSize="@dimen/secondaryTxtSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/employeeName"
        app:layout_constraintTop_toBottomOf="@id/transactionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee : Yash Mittal"
        android:textColor="@color/black"
        android:maxLength="35"
        android:textSize="@dimen/secondaryTxtSize"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/itemMargin" />

    <TextView
        android:id="@+id/customerName"
        app:layout_constraintTop_toBottomOf="@id/employeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer : Jaswant Saini"
        android:textColor="@color/black"
        android:textSize="@dimen/secondaryTxtSize"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/itemMargin" />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23 March, 2021"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/transactionId"
        android:textSize="@dimen/secondaryTxtSize"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/itemMargin" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/cl"
        />

</androidx.constraintlayout.widget.ConstraintLayout>